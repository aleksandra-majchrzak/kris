{
    "log":["CRUD+", "REST+", "Changes+", "Attach+"],
    "databases": {
        "kris_mobile_db": {
            "server":"http://192.168.0.11:8091",
            "sync":`
                function (doc, oldDoc) {                 

                    if(doc.DocType=="User" && doc.IsActive){
                        channel(doc.Login);
                    }
                    else {
                        channel (doc.channels);
                    }
            }`,
            "bucket":"kris_mobile_db_sync",
            "users": {
                "GUEST": {
                    "disabled": false,
                    "admin_channels": ["*"]
                }
            },
            "shadow":{
                "server":"http://192.168.0.11:8091",
                "bucket":"kris_mobile_db"
            }
        },
        "grocery-sync": {
            "server":"http://192.168.0.11:8091",
            "sync":`
                function (doc) {
                channel (doc.channels);
            }`,
            "bucket":"grocery-sync",
            "users": {
                "GUEST": {
                    "disabled": false,
                    "admin_channels": ["*"]
                }
            }
        }
    }
}